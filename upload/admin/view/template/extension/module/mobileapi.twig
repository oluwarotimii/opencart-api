{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            {% if version and ext %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> Обновите модуль
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            {% if ext %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>
                    {{ ext }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            <div class="pull-right">
                {% if version %}
                    <a href="{{ update }}" data-toggle="tooltip" title="{{ button_update }}"
                       class="btn btn-success"><i class="fa fa-refresh"></i></a>
                {% endif %}
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if error %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>
                <span>{{ error }}</span>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-slideshow" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ text_version }}</label>
                        <div class="col-sm-10 control-label">
                            <div class="pull-left">{{ current_version }}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">{{ entry_store }}</label>
                        <div class="col-sm-10">
                            <div class="well well-sm" style="height: 150px; overflow: auto;">
                                {% for store in stores %}
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="module_apimodule_store[]" value="{{ store.store_id }}"{% if store.store_id in module_apimodule_store %} checked="checked" {% endif %}/>
                                            {{ store.name }}
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_apimodule_status" id="input-status" class="form-control">
                                {% if module_apimodule_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-default">
            <input type="hidden" id="delete_action" value="{{ delete_action }}">
            <input type="hidden" id="site_id" value="{{ site_id }}">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-table"></i> {{ text_connected_devices }}</h3>
            </div>
            <div class="alert alert-success d_none deleted" role="alert">
                <button type="button" class="close"><span aria-hidden="true">&times;</span></button>
                {{ text_deleted }}
            </div>
            <div class="alert alert-danger d_none not_deleted" role="alert">
                <button type="button" class="close"><span aria-hidden="true">&times;</span></button>
                {{ text_not_deleted }}
            </div>
            <table class="apimodule table table-bordered">
                <thead>
                    <tr>
                        <td style="width: 30%;">{{ text_device_model }}</td>
                        <td style="width: 30%;">{{ text_oc }}</td>
                        <td style="width: 20%;" class="td_date">{{ text_created_at }}</td>
                        <td style="width: 20%;">{{ text_delete }}</td>
                    </tr>
                </thead>
                <tbody>
                    {% if devices %}
                        {% for device in devices %}
                            <tr>
                                <td>{{ device.device_model }}</td>
                                <td>{{ device.device_platform }}</td>
                                <td>{{ device.created_at }}</td>
                                <td>
                                    <button type="button" class="btn btn-danger delete" data-device_id="{{ device.device_id }}">
                                        <i class="fa fa-trash-o"></i>
                                    </button>
                                    <img class="spinner d_none" src="{{ image_spinner_src }}">
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{ footer }}
